<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mgov.gov.in.blohybrid.Rationalization"
    tools:showIn="@layout/activity_rationalization"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_ref"
            android:adjustViewBounds="true"
            android:src="@drawable/eciheader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="4pt">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Saved Data"
        android:layout_marginRight="3pt"
        android:layout_marginTop="1pt"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@drawable/btn_background"
        android:padding="5pt"
        android:id="@+id/tvshow"/>

    <TextView
        android:id="@+id/tvhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"
        android:paddingTop="4pt"
        android:text="BACK"
        android:textColor="#004d99"
        android:textSize="10pt"
        android:textStyle="bold" />

        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New Section Formation"
        android:textColor="#FFFFFF"
        android:textSize="10pt"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#AAFF9800"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvslno"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="8pt"
        android:gravity="center"
        android:textColor="#004d99"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etstreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:gravity="bottom"
                android:hint="Street Number"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:textSize="8pt"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvcapturstreetgps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="3pt"
                android:background="@drawable/btn_background"
                android:gravity="center"
                android:padding="5pt"
                android:text="Capture Start Point of Street"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvshowstreetgps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2pt"
                android:textColor="#004d99" />

            <TextView
                android:id="@+id/tvcapturstreetgps2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="3pt"
                android:background="@drawable/btn_background"
                android:gravity="center"
                android:padding="5pt"
                android:text="Capture Mid Point of Street"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvshowstreetgps2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2pt"
                android:textColor="#004d99" />

            <TextView
                android:id="@+id/tvcapturstreetgps3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="3pt"
                android:background="@drawable/btn_background"
                android:gravity="center"
                android:padding="5pt"
                android:text="Capture End Point of Street"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvshowstreetgps3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2pt"
                android:textColor="#004d99" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8B4513" />

            <EditText
                android:id="@+id/etbuilding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:gravity="bottom"
                android:hint="Building Detail"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:textSize="8pt"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/ethouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:gravity="bottom"
                android:hint="House Number"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:textSize="8pt"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:gravity="bottom"
                android:hint="Door Number"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:textSize="8pt"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvcapturbuildinggps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="3pt"
                android:background="@drawable/btn_background"
                android:gravity="center"
                android:padding="5pt"
                android:text="Capture GPS Location"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvshowbuildinggps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2pt"
                android:textColor="#004d99" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8B4513" />


            <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capture House GPS Location"
                android:layout_marginLeft="3pt"
