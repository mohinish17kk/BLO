<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200sp"
        android:minWidth="500sp"
        android:orientation="vertical"
        android:layout_marginTop="2sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family Detail"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btn_background"
            android:padding="5pt"
            android:id="@+id/asdstatus"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5pt"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unenrolled citizen as on 1st Jan 2018 (Born on or before 1st Jan 2000)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btn_background"
            android:padding="5pt"
            android:id="@+id/newvoter"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5pt"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left Over Voter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btn_background"
            android:padding="5pt"
            android:id="@+id/leftovervoter"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5pt"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prospective Voter as on 1st Jan 2019 (Born between 2nd Jan 2000 to 1st Jan 2001)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/btn_background"
            android:padding="5pt"
            android:id="@+id/ifany"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5pt"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>

</LinearLayout>